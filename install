#!/bin/bash

if [ -f "$HOME/lptools" ]; then
    rm -rf $HOME/lptools
fi

git clone https://github.com/lukasp2/vertel.git ~/lptools

# if ~/.bash_aliases does not exist or PATH is not set to ~/lptools/bin:$PATH therein.
if [ ! -f "$HOME/.bash_aliases" ] || [ -z $(grep -o "PATH=$HOME/lptools/bin:$PATH" $HOME/.bash_aliases) ]; then
    echo "PATH=$HOME/lptools/bin:$PATH" >> $HOME/.bash_aliases
fi
